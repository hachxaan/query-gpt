[Unit]
Description=Backoffice Beta
Requires=network.target
After=network.target
After=syslog.target

[Service]
TimeoutStartSec=0
RestartSec=7
Restart=always
User=administrador
KillSignal=SIGTERM
Type=notify
NotifyAccess=all
StandardOutput=journal
StandardError=journal

WorkingDirectory=/opt/backoffice/query-gpt
Environment="PATH=/opt/backoffice/query-gpt/venv/bin"
Environment="DJANGO_SETTINGS_MODULE=marketing_queries.settings"
ExecStart=/opt/backoffice/query-gpt/venv/bin/uwsgi --ini backoffice-beta.ini

[Install]
WantedBy=multi-user.target
